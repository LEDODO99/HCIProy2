<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_progreso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:fontFamily="serif"
                android:text="Progreso"
                android:textColor="#FF5722"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="304dp"
                android:layout_height="305dp"
                android:layout_below="@id/txt_progreso"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_medidaCintura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:fontFamily="serif"
                android:inputType="textPersonName"
                android:text="Cintura" />

            <EditText
                android:id="@+id/et_medidaBrazoI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:fontFamily="serif"
                android:inputType="textPersonName"
                android:text="Brazo izquierdo" />

            <EditText
                android:id="@+id/et_medidaPiernaI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:fontFamily="serif"
                android:inputType="textPersonName"
                android:text="Pierna izquierda" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_peso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:fontFamily="serif"
                android:inputType="textPersonName"
                android:text="Peso" />
            <EditText
                android:id="@+id/et_medidaBrazoD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:fontFamily="serif"
                android:inputType="textPersonName"
                android:text="Brazo derecho" />
            <EditText
                android:id="@+id/et_medidaPiernaD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:fontFamily="serif"
                android:inputType="textPersonName"
                android:text="Pierna derecha" />

        </LinearLayout>

        </LinearLayout>








            <Button
                android:id="@+id/button_guardarprogreso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:background="#00BCD4"
                android:fontFamily="serif"
                android:text="Guardar datos"
                android:textColor="#F8F8F8"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>